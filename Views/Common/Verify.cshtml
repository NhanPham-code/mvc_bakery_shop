<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quên Mật Khẩu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oleo+Script:wght@400;700&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            width: 100%;
            overflow-x: hidden;
        }

        h2 {
            margin-bottom: 20px;
            text-align: center;
            font-family: "Oleo Script", serif;
        }

        .forgot-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .background {
            padding: 8%;
            background-image: url('/img/PRODUCT/Background/Bakery.jpg');
            background-size: cover;
            background-position: center;
            height: 72dvh;
        }

        .container2 {
            background: white;
            border-radius: 10px;
            display: flex;
            width: 600px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .form-section {
            padding: 40px;
            flex: 1;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .input-group {
            display: flex;
            align-items: center;
            border: 1px solid #ccc;
            border-radius: 5px;
            overflow: hidden;
            background: #f9f9f9;
        }

        input {
            flex: 1;
            padding: 10px;
            border: none;
            outline: none;
            font-size: 16px;
            background: transparent;
        }

        .send-text {
            padding: 5px 10px; /* Giảm padding để làm gọn */
            color: blue;
            cursor: pointer;
            font-size: 14px;
            border-left: 1px solid #ccc;
            white-space: nowrap;
            line-height: 1; /* Làm dấu | ngắn hơn */
        }

        .disabled {
            color: gray;
            cursor: not-allowed;
        }

        .btn {
            width: 100%;
            padding: 15px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 18px;
            margin: 12px 0;
            transition: transform 0.2s, background-color 0.2s;
        }

            .btn:hover {
                background-color: #0056b3;
                transform: translateY(-3px);
            }
    </style>
</head>

<body>
    <div class="background">
        <div class="forgot-container">
            <div class="container2">
                <div class="form-section">
                    <h2>Verify Email</h2>
                   <!-- Form nhập Email -->
                    <form id="verify-code-form">
                        <div class="form-group">
                            <label for="user-email">Please enter your email:</label>
                            <div class="input-group">
                                <input type="email" id="user-email" placeholder="Enter your email">
                                <span class="send-text" id="sendButton" onclick="startTimer()">Send (60s)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="code">Please enter your code:</label>
                            <input type="text" id="code" placeholder="Enter verification code">
                        </div>
                        <button type="submit" class="btn">Verify</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function startTimer() {
            let sendButton = document.getElementById("sendButton");
            if (sendButton.classList.contains("disabled")) return;

            sendButton.classList.add("disabled");

            let timeLeft = 60;
            let timer = setInterval(function () {
                sendButton.innerText = "Send (" + timeLeft + "s)";
                timeLeft--;

                if (timeLeft < 0) {
                    clearInterval(timer);
                    sendButton.innerText = "Send";
                    sendButton.classList.remove("disabled");
                }
            }, 1000);
        }
    </script>
</body>
</html>
