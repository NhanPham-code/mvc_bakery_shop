<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management</title>
    <link rel="stylesheet" href="/css/AdminOrder.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    
    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <div class="toolbar">
                <select id="filterSelect">
                    <option value="all">All</option>
                    <optgroup label="Status">
                        <option value="New Order">New Order</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </optgroup>
                </select>

                <div class="search-container">
                    <input type="text" id="searchInput" placeholder="Search by ID or Name...">
                    <button id="searchButton"><i class="fa fa-search"></i></button>
                </div>
            </div>

            <table id="orderTable">
                <thead>
                    <tr>
                        <th class="name-column">ID</th>
                        <th class="name-column">Name</th>
                        <th class="name-column">Status</th>
                        <th class="name-column">Purchase Date</th>
                        <th class="name-column">Actions</th>
                        <th class="name-column">Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>ORD001</td>
                        <td>John Doe</td>
                        <td>New Order</td>
                        <td>2025-02-09</td>
                        <td><button>View</button></td>
                        <td>$100</td>
                    </tr>
                    <tr>
                        <td>ORD002</td>
                        <td>Jane Smith</td>
                        <td>Completed</td>
                        <td>2025-02-08</td>
                        <td><button>View</button></td>
                        <td>$250</td>
                    </tr>
                    <tr>
                        <td>ORD003</td>
                        <td>Michael Johnson</td>
                        <td>Cancelled</td>
                        <td>2025-02-07</td>
                        <td><button>View</button></td>
                        <td>$50</td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5" style="text-align: right;"><strong>Total Cancelled:</strong></td>
                        <td id="cancelTotal"><strong>$50</strong></td>
                    </tr>
                    <tr>
                        <td colspan="5" style="text-align: right;"><strong>Total Orders:</strong></td>
                        <td id="orderTotal"><strong>$350</strong></td>
                    </tr>
                </tfoot>
            </table>
            <div id="pagination">
                <button onclick="prevPage()">« Previous</button>
                <button onclick="nextPage()">Next »</button>
            </div>
        </div>
    </div>

    <script src="/js/AdminOrder.js"></script>
    <script>
        function loadHTML(elementId, url) {
            fetch(url)
                .then(response => response.text())
                .then(data => {
                    document.getElementById(elementId).innerHTML = data;
                    const script = document.createElement('script');
                    script.src = 'Admin-js/Navbars.js';
                    document.body.appendChild(script);
                });
        }

        loadHTML('navbars-placeholder', 'Navbars.html');
    </script>
</body>
</html>
